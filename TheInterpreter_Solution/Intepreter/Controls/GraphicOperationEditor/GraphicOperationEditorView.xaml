        </HierarchicalDataTemplate>-->
    </UserControl.Resources>
    <StackPanel>
        <TreeView ItemsSource="{Binding XmlData.Document}"
                  ItemTemplate= "{StaticResource nodeTemplate}"/>
    </StackPanel>
</UserControl>
